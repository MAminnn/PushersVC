<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20px"
    android:orientation="vertical"
    android:rowCount="4"
    android:columnCount="4"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main">
    <RelativeLayout
        android:id="@+id/btnContainer"
        android:layout_row="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Start"
            app:strokeColor="@android:color/transparent"
            android:id="@+id/btnStart"/>
        <com.google.android.material.button.MaterialButton
            app:strokeColor="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:text="Stop"
            android:id="@+id/btnStop"/>
        <com.google.android.material.button.MaterialButton
            app:strokeColor="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_height="wrap_content"
            android:text="Play"
            android:id="@+id/btnPlay"/>

    </RelativeLayout>
    <GridLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <SeekBar
            android:progressTint="@android:color/transparent"
            android:maxWidth="30dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:min="1"
            android:progress="10"
            android:max="19"
            android:id="@+id/PitchSeekBar"
            android:layout_alignParentStart="true"
            />
        <TextView
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pitch Shift"
            android:textSize="24dp"/>
        <GridLayout
            android:paddingHorizontal="50dp"
            android:paddingVertical="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            >

            <RelativeLayout
                android:id="@+id/CheckBoxContainer1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <CheckBox
                    android:id="@+id/NoiseCheckBox"
                    android:textSize="22dp"
                    android:text="Noisy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                />
                <CheckBox
                    android:id="@+id/RobotizedCheckBox"
                    android:textSize="22dp"
                    android:text="Robatic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_alignParentRight="true"
                />


            </RelativeLayout>
        </GridLayout>
        <GridLayout
            android:paddingVertical="20dp"
            android:paddingHorizontal="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <RelativeLayout
                android:id="@+id/CheckBoxContainer2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <CheckBox
                    android:id="@+id/EchoCheckBox"
                    android:textSize="22dp"
                    android:text="Echoing "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                />
                <CheckBox
                    android:id="@+id/WavyCheckBox"
                    android:textSize="22dp"
                    android:text="Wavy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                />
            </RelativeLayout>
        </GridLayout>
                <GridLayout
            android:paddingVertical="20dp"
            android:paddingHorizontal="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <RelativeLayout
                android:id="@+id/CheckBoxContainer3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <CheckBox
                    android:id="@+id/Speed2XCheckBox"
                    android:textSize="22dp"
                    android:text="2X "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                />
                <CheckBox
                    android:id="@+id/HalfXCheckBox"
                    android:textSize="22dp"
                    android:text="1/2 X"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                />
            </RelativeLayout>
        </GridLayout>
    </GridLayout>
    <RelativeLayout
        android:id="@+id/btnContainer2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:text="Save" android:id="@+id/btn_Save"
            android:capitalize="none"
            android:layout_height="wrap_content"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:text="Discard" android:id="@+id/btn_Discard"
            android:capitalize="none"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
</GridLayout>









